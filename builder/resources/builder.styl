@import variables;
@import url("//fonts.googleapis.com/css?family=Open+Sans:100,400,300,700");

* {
	box-sizing: border-box;
}

html,
body {
	height: 100%;
	width: 100%;
	margin: 0;
	font-family: 'Open Sans';
	font-size: 16px;
	background: #F8F8F8;
}

fieldset {
	border: 0;
	margin: 0;
	padding: 0;
}

.builder {
	font-size: 0;
	height: 100%;
}


/*
 * Icon font
 */

@font-face {
	font-family: 'icomoon';
	src:url('fonts/icomoon.eot?kn321z');
	src:url('fonts/icomoon.eot?#iefixkn321z') format('embedded-opentype'),
		url('fonts/icomoon.woff?kn321z') format('woff'),
		url('fonts/icomoon.ttf?kn321z') format('truetype'),
		url('fonts/icomoon.svg?kn321z#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	transition: color 0.5s;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-times:before {
	content: "\f00d";
}

.icon-gear:before {
	content: "\f013";
}

.icon-info-circle:before {
	content: "\f05a";
}
.icon-external-link:before {
	content: "\f08e";
}
.icon-navicon:before {
	content: "\f0c9";
}
.icon-angle-up:before {
	content: "\f106";
}
.icon-angle-down:before {
	content: "\f107";
}
.icon-mail-reply:before {
	content: "\f112";
}



/*
 * Tabs
 */
.tabs {
	font-size: 0;
	background: #1A374F;
}

.tab {
	color: #C3F1FF;
	font-size: 12px;
	padding: 15px 10px;
	display: inline-block;
	cursor: pointer;
}

.tab.active {
	background: #0B1E2A;
}

[data-tab] {
	opacity: 0 !important;
	z-index: 0  !important;
	position: absolute !important;
	top: 47px  !important;
}

[data-tab].showing {
	opacity: 1 !important;
	z-index: 1  !important;
}


/*
 * Header
 */

.header {
	position: relative;
	width: 100%;
	background: white;
	overflow: hidden;
	font-size: 24px;
	font-weight: 100;
	color: white;
	vertical-align: middle;
	box-shadow: 0px 4px 10px -2px #0B1E2A;
	z-index: 3;

	.controlHeader {
		background: #1284CC;
		width: 300px;
		display: inline-block;
	}

	.logoLink {
		box-shadow: 1px 0 6px 0px #0E6AA4;
		display: inline-block;
		vertical-align: middle;
		margin-right: 10px;
	}

	.menuLink {
		color: black;
		font-size: 18px;
		margin-left: 16px;
		text-decoration: none;
	}
	.logo {
		width: 98px;
		padding: 15px;
	}

	.splogo {
		position: absolute;
		top: 10px;
		right: 30px;
	}

}

/*
 * Dijit overrides
 */

.claro {
	.dgrid {
		background: #0B1E2A;
	}
	.dijitButton .dijitButtonNode {
		border: 1px solid #A8EAFF;
		background: transparent;
		color: #A8EAFF;
		padding: 2px 7px 4px;
	}

	.dijitTextBox {
		border-radius: 5px;
		border: 0;
		padding: 2px 1px;
		background: #FFF !important;
		font-size: 12px;
		color: #0B1E2A;
	}

	.dijitTextBox .dijitInputInner {
		color: #144C66;
	}

	.dijitTextBox,
	.dijitPlaceHolder,
	.dgrid-input {
		font-style: normal;
		font-family: 'Open Sans';
		outline: 0;
	}

	.dgrid-input:focus {
		outline: 0;
	}

	.dgrid-selected {
		background: transparent;
	}

}


/*
 * Feature grid and Column grid
 */

 .claro {
 	.featureGrid,
	.columnGrid {
		height: auto;
		border: 0 !important;

		.dgrid-scroller {
			position: relative;
			overflow: hidden;
		}

		.dgrid-content {
			height: auto;
		}

		.dgrid-row-even {

		}

		.dgrid-row-odd {

		}

		.dgrid-cell {
			line-height: 26px;
			border: 0;
			padding: 0;
		}
		.dijitCheckBox {
			background: none;
			border-radius: 3px;
			background-color: #ECF0F1;
			width: 18px;
			height: 18px;
		}
		.dijitCheckBox[disabled] {
			background: none;
			border-radius: 3px;
			background-color: #ECF0F1;
			width: 18px;
			height: 18px;
		}
		.dijitCheckBoxChecked {
			background: url('img/check.png') no-repeat center center/contain;
			background-color: #1ABC9C;
		}

		.icon-gear {
			color: $sidebarIconColor;
			font-size: 16px;
			vertical-align: middle;
			&:hover {
				color:$sidebarGearColor;
			}
		}
	}

	.columnGrid {
		.dgrid-row {
			background: $sidebarBackground;
			color: white;
			font-size: 13px;
			font-weight: 100;
			border: 0 !important;
			width:100%;
			padding:0;
			transition: padding 0.3s;

			table td {
				padding:4px;
			}
		}

		.dgrid-row-odd table td {
			background: #0B1E2A;
		}

		.dgrid-row-even table td {
			background: #23343F;
		}

		.dgrid-column-dragSource {
			width: 30px;
			font-size: 16px;
		}
		.dgrid-column-config  {
			width: 45px;
			padding-left: 4px;
		}
		.dgrid-column-label {
			padding-left: 2px;
		}

		.dgrid-column-fieldName {
			padding-right: 3px;
		}
		.icon-gear {
			margin-left: 7px;
		}

		.icon-times {
			color: $sidebarIconColor;
			&:hover {
				color: $deleteColor;
			}
			cursor: pointer;
			vertical-align: middle;
		}

		/* FIX: Claro's DnD styles don't adequately represent drop location and add excessive borders/padding */

		.dojoDndItem {
			&:before,
			&:after {
				border:1px dotted #3C5E79;
				content: " ";
				height:1px;
				display:block;
				transition: height 0.2s, opacity 0.3s, background 0.3s;
				opacity: 0;
			}
			&:active {
				opacity: 0.5;
			}

			.dojoDndHandle {
				padding-left:10px;
			}


		}

		.dojoDndItemBefore:before,
		.dojoDndItemAfter:after,
		.dojoDndItemAfter:nth-last-child(2):after {
			background: lighten($sidebarBackground, 5%);
			height:30px;
			opacity: 1;
		}

		.dojoDndItemAfter:nth-last-child(2):before {
			height:1px;
			opacity:0;
		}


		// Selected item. Cannot drop on its self, don't show styling.
		.dgrid-selected {
			&:before,
			&:after {
				height:1px;
				opacity:0;
			}
		}

		.dojoDndItem .dgrid-cell {
			border-top: none;
			border-bottom: none;
		}
		/* END DnD FIX */
	}
}


.featureEditor .gridTypeForm {
	line-height: 26px;
	border: 0;
	padding: 0;
}

.columnEditor {
	margin: 0;
	overflow: hidden;
	position: relative;
	transition: max-height .5s ease-in-out, margin .5s ease-in-out;
}


.dgrid-column-dragSource i {
	color: #1284CC;
}


/*
 * Feature Editor Grid
 */
.featureEditor {
	width: 100%;

	.configForm {
		width: 100% !important;

		.dijitButton {
			top: 10px;
			right: 10px;
			margin: 0;
			z-index: 1;
		}
		a {
			color: white;
		}
	}
	.gridTypeForm {
		padding: 10px;
	}
	.dgrid-row {
		background: #0B1E2A;
		padding: 0 10px;
		a {
			text-decoration: none;
			color: white;
			font-size: 14px;
		}

	}
	.dgrid-column-selected {
		width: 30px;
	}
	.dgrid-expando-icon {
		display: none;
	}
}


/*
 * Column grid form
 */

.columnGridForm {
	font-size: 0;
	position: relative;
	padding: 5px 0 14px 10px;

	.addBtn {
		background: transparent;
		border: 0;
		color: #FFF;
		font-size: 18px;
		outline: 0;
		transition: color 0.4s;
		width: 40px;
		&:hover {
			color: lighten($confirmColor, 20%);
			cursor:pointer;
		}
	}

	.dijitTextBox:first-child {
		display: inline-block;
		width: calc(100% - 40px);
	}

}


/*
 * Column configuration form
 */

.columnEditor {
	height: 100%;
	width: 200%;
	transition: transform .2s ease-in-out;
}

.columnEditor.slid {
	transform: translateX(-50%);
}

.configForm {
	color: white;
	font-weight: 100;
	font-size: 14px;
	position: relative;
	padding: 10px;
	display: inline-block;
	width: 50%;
	vertical-align: top;

	.dijitButton {
		position: absolute;
		top: 0;
		right: 0;
	}

	.dijitButton .dijitButtonNode {
		font-size: 14px;
	}

	fieldset {
		font-size: 0;
		position: relative;
	}

	legend {
		font-size: 14px;
		margin-bottom: 30px;
    	padding: 0;
	}
	.label {
		width: 120px;
		display: inline-block;
		font-size: 14px;
		vertical-align: top;
		height: 35px;
		&:after {
			content: ':';
			display: inline-block;
		}
	}

	.field {
		width: calc(100% - 120px);
		display: inline-block;
		vertical-align: top;
		font-size: 12px;
		.dijitTextBox {
			width: 100%;
			margin-bottom:10px;
		}
	}
	.mixinProp {
		font-weight: bold;
		margin-top: 20px;
	}
}


.columnGridContainer {
	display: inline-block;
	padding-top:1em;
	width: 50%;
	vertical-align: top;
}

.gridTypeForm {
	color: white;
	font-size: 14px;
	font-weight: 100;
	margin-bottom: 10px;
}

